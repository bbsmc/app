{
  "extends": "tsconfig/base.json",
  "include": ["src/**/*"],
  "exclude": ["dist", "build", "node_modules"],
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  }
}
